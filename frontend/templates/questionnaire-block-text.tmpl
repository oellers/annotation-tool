{{#> layout}}
    <div class="control-group{{#if validationErrors}} error{{/if}}">
        <label class="control-label">{{item.title}}{{#if item.required}} *{{/if}}</label>
        <div class="controls">
            <textarea class="input-block-level"{{#if item.required}} required{{/if}}>{{contentItem.value}}</textarea>
            <span class="help-block">{{item.description}}</span>
            {{#each validationErrors as |error|}}
                <span class="help-block"> {{t error}} </span>
            {{/each}}
        </div>
    </div>
{{/layout}}
